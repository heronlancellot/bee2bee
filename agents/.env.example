# LLM Provider Configuration
# Choose one of: openai, anthropic, local
LLM_PROVIDER=anthropic

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Configuration (if using Anthropic Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Local LLM Configuration (if using Ollama or similar)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# API Server Configuration
API_SERVER_HOST=0.0.0.0
API_SERVER_PORT=5001
API_SERVER_DEBUG=True

# Agent Configuration
AGENT_SIGMAR_PORT=8000
AGENT_SLAANESH_PORT=8001

# Logging
LOG_LEVEL=INFO
